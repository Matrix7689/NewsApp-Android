<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/diag_img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/diag_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_below="@id/diag_img"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/diag_twitter"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:layout_below="@+id/diag_title"
        android:src="@drawable/bluetwitter"
        android:background="@drawable/dialog_button_background"
        android:padding="2dp"/>

    <ImageView
        android:id="@+id/diag_bmark"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:layout_below="@+id/diag_title"
        android:layout_toRightOf="@id/diag_twitter"
        android:background="@drawable/dialog_bmark_background"
        android:padding="2dp"/>


</RelativeLayout>